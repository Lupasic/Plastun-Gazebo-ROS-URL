<launch>
  <!-- launch to start amcl mapping with known map  -->
	<arg name="scan" default="/plastun/laser/scan" />
	<arg name="map"  default="$(find plastun_global_navigation)/maps/map.yaml"/>
        <!-- launch map server -->
	<node name="mapserver" pkg="map_server" type="map_server" args="$(arg map)" respawn="false" output="screen">
  	</node>

	<include file="$(find plastun_scripts)/launch/amcl_stage.xml">
	    <arg name="amclscan" value="$(arg scan)" />
	</include> 
	
	<include file="$(find plastun_scripts)/launch/move_base/move_base.xml">
	    <arg name="scan" value="$(arg scan)" />
	</include> 
</launch>
